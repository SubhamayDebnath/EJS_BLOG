<container class="px-0">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Do Reply</h4>
                    <% if (error_msg.length> 0) { %>
                    <div class="custom-alert-error rounded mt-2" role="alert">
                      <%= error_msg %>
                    </div>
                    <% } %>
                    <% if (success_msg.length> 0) { %>
                    <div class="custom-alert-success rounded mt-2" role="alert">
                      <%= success_msg %>
                    </div>
                    <% } %>
                </div>
                <div class="card-body">
                    <form action="/api/v1/add-reply" method="post">
                       <div class="form-group mb-3">
                        <input type="hidden" name="commentID" id="commentID" value="<%- commentID %>">
                        <label for="reply" class="form-label">Reply</label>
                        <textarea name="reply" id="reply" placeholder="Enter your reply message" class="form-control" required ></textarea>
                       </div>
                       <button type="submit" class="w-100 btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</container>