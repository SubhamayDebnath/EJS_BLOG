<div class="container px-0">

  <div class="row ">
    <div class="col-lg-8 col-md-10 col-12">
      <div class="card profile-card p-4 ">
        <% if (error_msg.length> 0) { %>
          <div class="custom-alert-error alert alert-dismissible  rounded mt-2" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        <div class="row">
          <div class="col-sm-4 col-12 ">
            <div class="card-header bg-dark border-bottom-0 d-flex align-item-center justify-content-center h-100 p-lg-4 p-0">
              <div class="user-image-container card-img ratio ratio-1x1 my-auto rounded-circle overflow-hidden mx-auto">
                <img src="<%-user.avatar.secure_url%>" class="w-100 h-100 object-fit-cover" alt="User Profile Image">
              </div>
            </div>
          </div>
          <div class="col-sm-8 col-12">
            <div class="card-body text-start d-flex flex-column gap-2">
              <p class="card-text">
                <strong>Username : </strong>
                <span class="text-muted text-capitalize"><%-user.username%></span>
              </p>
              <p class="card-text">
                <strong>Email : </strong>
                <span class="text-muted"><%-user.email%></span>
              </p>
              <p class="card-text">
                <strong>Role : </strong>
                <span class="text-muted"><%-user.role%></span>
              </p>
              <p class="card-text">
                <strong>Number of Posts : </strong>
                <span class="text-muted"><%-numberOfPostByUser%></span>
              </p>
              <div class="d-flex align-items-center gap-2 mt-3">
                <a href="/dashboard/me/update/<%- user._id %>" class="btn btn-primary btn-sm d-flex align-items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2">
                    <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z">
                    </path>
                  </svg>
                  Edit
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>