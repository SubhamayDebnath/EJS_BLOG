<section class="py-5 hero-banner-section position-relative mb-5">
    <div class="d-flex align-items-center justify-content-center pt-5">
      <h2 class="display-8 text-white fw-bold text-center">Posts in Category: <span class="text-capitalize"> <%-categoryName  %></span></h2>
    </div>
    <div id="particles-js" class="position-absolute top-0"></div>
  </section>
  <section class="mb-5">
    <div class="container px-0">
      <% if(posts.length) { %>
      <div class="row ">
        <% posts.forEach((data)=>{%>
        <a href="/article/<%- data.slug  %>" class="col-lg-4 col-md-6 col-12 custom-card">
          <div class="post-image-container overflow-hidden ratio ratio-16x9 rounded">
            <img src="<%-data.image.secure_url %>" alt="<%-data.title %>" class="w-100 h-100 object-fit-cover">
          </div>
          <div class="post-details-container px-2 py-3">
            <span class="btn tag tag-btn border text-capitalize"><%- data.category.name %></span>
            <h1 class="fs-5 post-card-title text-white my-2">
              <%- data.title.replace(/<[^>]+>/g, '').length > 90 ? data.title.replace(/<[^>]+>/g, '').slice(0, 90) + '...' : data.title.replace(/<[^>]+>/g, '') %>
            </h1>
            <p class="post-summary">
              <%- data.content.replace(/<[^>]+>/g, '').length > 120 ? data.content.replace(/<[^>]+>/g, '').slice(0, 120) + '...' : data.content.replace(/<[^>]+>/g, '') %>
            </p>
          </div>
        </a>
        <%})%>
      </div>
      <% }else{ %>
      <div class="my-5 py-5">
        <p class="text-center">No posts in this category.</p>
      </div>
      <% } %>
    </div>
    <div class="d-flex align-items-center <%- prevPage ? 'justify-content-between':'justify-content-end'%>">
      <% if (prevPage) { %>
      <a href="?page=<%= prevPage %>" class="btn tag border">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Previous
      </a>
      <% } %>
      <% if (nextPage) { %>
      <a href="?page=<%= nextPage %>" class="btn tag border">
        Next
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
      <% } %>
    </div>
    <div class="text-center mt-3">
      <p> On page <%= current %> of <%= totalPages %>.</p>
    </div>
  </section>